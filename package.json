{
  "name": "boreas",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "check-imports": "node scripts/validate-imports.js",
    "check-all": "npm run type-check && npm run check-imports && npm run lint",
    "pre-commit": "node scripts/pre-commit-check.js",
    "prepare": "husky install || echo 'husky not installed'",
    "analyze": "ANALYZE=true npm run build",
    "analyze:build": "npm run build && npm run analyze:serve",
    "analyze:serve": "npx -p @next/bundle-analyzer serve",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "build:analyze": "npm run build && npm run analyze:bundle",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=src/",
    "test:integration": "jest --testPathPattern=tests/integration/",
    "test:performance": "jest --testPathPattern=tests/performance/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:performance:e2e": "playwright test --project=performance",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "playwright:install": "playwright install",
    "playwright:report": "playwright show-report"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.47.10",
    "@types/web": "^0.0.327",
    "autoprefixer": "^10.4.24",
    "lucide-react": "^0.468.0",
    "next": "^15.1.6",
    "posthog-js": "^1.341.0",
    "posthog-node": "^5.24.10",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.2",
    "resend": "^6.9.1",
    "web-vitals": "^5.1.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@playwright/test": "^1.41.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/react-hooks": "^8.0.1",
    "eslint": "^9",
    "eslint-config-next": "^15.1.6",
    "glob": "^13.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@next/bundle-analyzer": "^15.1.6",
    "lighthouse": "^11.4.0",
    "postcss": "^8",
    "supabase": "^2.75.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
